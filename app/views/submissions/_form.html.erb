<%= form_for(@submission) do |f| %>
  <table class="submission-form">
    <tr>
      <th><%= f.label :title %>:</th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_datetime %>:</th>
      <td><%= f.datetime_select :start_datetime, :use_month_numbers => true %></td>
    </tr>
    <tr>
      <th><%= f.label :end_datetime %>:</th>
      <td><%= f.datetime_select :end_datetime, :use_month_numbers => true %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.check_box :all_day %><%= f.label :all_day %></td>
    </tr>
    <tr>
      <th><%= f.label :where %>:</th>
      <td><%= f.text_field :where %></td>
    </tr>
    <tr>
      <th><%= f.label :description %>:</th>
      <td><%= f.text_area :description %></td>
    </tr>
  </table>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<%= javascript_tag do %>
  $(function() {
    var = show 
    $('#submission_all_day').bind('change', function() {
      $('#submission_end_datetime_4i, #submission_end_datetime_5i')[this.checked ? 'hide' : 'show']()
    });
  });
<% end %>
